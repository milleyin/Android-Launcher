<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/item"
    android:background="@drawable/week_list_item_bg"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/tv_date" android:layout_height="40dp"  android:layout_width="wrap_content" android:textColor="@color/text_color_base" android:singleLine="true"  android:gravity="left|center_vertical" android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_thing"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/text_color_base"
        android:gravity="left|center_vertical"
        />

</LinearLayout>