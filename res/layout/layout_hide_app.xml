<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="40dip"
  android:paddingRight="40dip"
  android:gravity="center"
  android:background="#35000000" >
  	<LinearLayout 
  		android:orientation="vertical"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:paddingTop="10dip"
  		android:paddingBottom="20dip"
  		android:gravity="center"
		android:background="@drawable/corner_bg1" >
	    <LinearLayout 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
	    	<TextView 
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="隐藏程序"/>
	    	<TextView 
	    		android:id="@+id/numtextview"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <TextView 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="1px" 
	    	android:background="#45666666" 
	    	android:layout_marginTop="7dip"
	    	android:layout_marginBottom="12dp"
	    	android:layout_marginLeft="15dip"
	    	android:layout_marginRight="15dip" />
	    <com.dongji.ui.ScrollLayoutTouchable 
	    	android:id="@+id/hide_app_content" 
	    	android:layout_width="fill_parent"  
	    	android:layout_height="230dp" />
	    <LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center" >
	    	<Button 
	    		android:id="@+id/hide_app_cancelbutton"
	    		android:layout_width="180dip"
	    		android:layout_height="wrap_content"
	    		android:layout_marginRight="5dip"
	    		android:text="取消"
	    		android:textColor="#fff"
	    		android:gravity="center"
	    		android:background="@drawable/btn_red_normal" />
	    	<Button 
	    		android:id="@+id/hide_app_confirmbutton"
	    		android:layout_width="180dip"
	    		android:layout_height="wrap_content"
	    		android:layout_marginLeft="5dip"
	    		android:text="确定"
	    		android:textColor="#fff"
	    		android:gravity="center"
	    		android:background="@drawable/btn_green_normal" />
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>
