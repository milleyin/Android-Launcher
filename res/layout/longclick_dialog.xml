<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
     >
    <LinearLayout android:layout_width="300dp" android:layout_height="180dp" android:orientation="vertical"  android:background="@drawable/corner_bg1"    >
        
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" >
        <TextView android:textColor="#666666" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:textSize="18sp" android:text="添加到桌面" />
    </LinearLayout>
    
    <TextView android:layout_width="fill_parent" android:layout_height="1px" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:background="@color/text_color_base" />
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"  android:orientation="horizontal" android:gravity="center" android:layout_marginTop="10dp" >
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"  android:layout_weight="1" android:gravity="center_horizontal" >
            <Button android:id="@+id/btn_add_widget_to_destop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/tools_ico" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="小工具" android:textColor="#666666" />
        </LinearLayout>
        
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"  android:layout_weight="1" android:gravity="center_horizontal" >
            <Button android:id="@+id/btn_set_wallpaper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/wallpaper_ico" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="壁纸" android:textColor="#666666" />
        </LinearLayout>
    </LinearLayout>
    
    </LinearLayout>
    
</LinearLayout>