<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="56dip"
    android:background="@drawable/setting_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/iv_setting_flyModel"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/setting_flymodel_off" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_split" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_setting_power_int"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="100%"
            android:textColor="#828282"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_setting_power"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/setting_power_100_off"
            android:paddingBottom="3dip" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_split" />

    <ImageView
        android:id="@+id/iv_setting_sync"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/setting_sync_off" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_split" />

    <ImageView
        android:id="@+id/iv_setting_wifi"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/setting_wifi_off" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_split" />

    <ImageView
        android:id="@+id/iv_setting_bright"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/setting_bright_100_off" />

    <ImageView
        android:id="@+id/iv_setting_system"
        android:layout_width="52dip"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_system_selector"
        android:scaleType="center"
        android:src="@drawable/setting_system" />

</LinearLayout>