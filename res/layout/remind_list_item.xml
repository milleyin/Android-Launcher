<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal" android:padding="5dp" >
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" >
           <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="3dp" >
              <TextView android:id="@+id/tv_event_time"  android:text="1-1至1-2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:textColor="@color/remind_text_color_normal" />
              <TextView android:id="@+id/tv_remind_num"  android:text="提醒:1 天" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:textColor="@color/remind_text_color_normal" />
           </RelativeLayout>

           <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="3dp" >
              <TextView android:id="@+id/tv_repeat_type"  android:text="重复:每天" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:textColor="@color/remind_text_color_normal" />
              <TextView android:id="@+id/tv_repeat_freq"  android:text="重复频率:1 天" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:textColor="@color/remind_text_color_normal" />
           </RelativeLayout>
    
           <TextView android:id="@+id/t_repeat_codition" android:text="重复时间: 每周  周一  周二" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_marginBottom="3dp" android:textColor="@color/remind_text_color_normal" />
           
           <TextView android:id="@+id/tv_repeat_time" android:text="重复开始:    重复结束:    " android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_marginBottom="3dp" android:textColor="@color/remind_text_color_normal" />
           
           <LinearLayout android:layout_width="fill_parent" android:visibility="gone" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="3dp" >
             <TextView android:id="@+id/tv_partners"  android:layout_width="wrap_content"  android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:textColor="@color/remind_text_color_normal" />
           </LinearLayout>
           
           <TextView android:id="@+id/tv_remind_time" android:text="提醒次数" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_marginBottom="3dp" android:textColor="@color/remind_text_color_normal" />
           
           
           <TextView android:id="@+id/content" android:text="与XXX确定项目进度" android:textColor="@color/remind_text_color_info"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" />
    </LinearLayout>
        <CheckBox android:id="@+id/checkBoxEdit" android:focusable="false" android:layout_marginLeft="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_gravity="center_vertical" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/menu"
        android:background="@drawable/menu_bg"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-75dp"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout   android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="1" >
            <Button
            android:id="@+id/menu_edit_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@drawable/btn_edit_remind" />
        </LinearLayout>
        
        
        <LinearLayout   android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:layout_gravity="center_vertical"
            android:layout_weight="1" >
            <Button
            android:id="@+id/menu_delete_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:background="@drawable/btn_delete_remind" />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>