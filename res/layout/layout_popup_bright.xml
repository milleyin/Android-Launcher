<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="54dip"
    android:layout_height="140dip"
    android:background="@drawable/setting_popup_bright_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_bright_0"
        android:layout_width="50dip"
        android:layout_height="45dip"
        android:scaleType="center"
        android:src="@drawable/setting_bright_0_selector" />

    <ImageView
        android:id="@+id/iv_bright_50"
        android:layout_width="50dip"
        android:layout_height="45dip"
        android:scaleType="center"
        android:src="@drawable/setting_bright_50_selector" />

    <ImageView
        android:id="@+id/iv_bright_100"
        android:layout_width="50dip"
        android:layout_height="45dip"
        android:scaleType="center"
        android:src="@drawable/setting_bright_100_selector" />

</LinearLayout>