<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" >

    <ImageView
        android:id="@+id/iv_power_checkable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dip"
        android:src="@drawable/setting_checkoff" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_power_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_power_normal"
            android:textColor="#828282"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_power_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_power_custom_tip"
            android:textColor="#cccccc"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_choose_power_setting"
        android:layout_width="50dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/setting_power_set"
        android:visibility="gone" />

</LinearLayout>