<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="90dip"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="64dip"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_cloudappIcon"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_cloudappbg"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/cloudapp_icon_bg" />

        <ProgressBar
            android:id="@+id/pbcloudappDownload"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="64dip"
            android:layout_height="11dip"
            android:layout_gravity="bottom|center_horizontal"
            android:progressDrawable="@drawable/download_progressbar_style"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_waitTiips"
            android:layout_width="64dip"
            android:layout_height="12dip"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="8dip"
            android:gravity="center"
            android:text="等待安装"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_cloudappName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cloudapp_name_bg"
        android:paddingLeft="2dip"
        android:paddingTop="1dip"
        android:paddingRight="2dip"
        android:paddingBottom="1dip"        
        android:textColor="@android:color/white"
        android:textSize="12dip" />

</LinearLayout>